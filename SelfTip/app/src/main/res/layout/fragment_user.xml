<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_main_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
            <com.edu.nuc.selftip.RadiuImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/touxiang"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                app:radius="20dp"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="name"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_weight="30"
                android:textSize="20dp"
                />
            <ImageView
                android:id="@+id/iv_tips"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/tips"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/setting"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                />
        </TableRow>
        <TableRow
            android:id="@+id/message_user"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:id="@+id/ll_weight"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/shape_corner"
                android:layout_weight="1"
                >
                <TableRow
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_corner"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/sucai1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        />
                </TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体重"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    />
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="48.0"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:textSize="10dp"
                        />
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_height"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/shape_corner"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                >
                <TableRow
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_corner"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/sucai2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        />

                </TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身高"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    />
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/tv_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="184"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cm"
                        android:textSize="10dp"
                        />
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bmi"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/shape_corner"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                >
                <TableRow
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_corner"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/sucai3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        />

                </TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    />
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/tv_bmi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21.5"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10dp"
                        />
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_blood"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/shape_corner"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                >
                <TableRow
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_corner"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/sucai4"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        />

                </TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="血型"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    />
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/tv_blood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AB"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10dp"
                        />
                </TableRow>
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            >
            <TextView
                android:id="@+id/tv_waittodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待办事项"
                android:textSize="20dp"
                android:layout_weight="10"
                />
            <AnalogClock
                android:id="@+id/ac_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner"
            >
            <TextView
                android:id="@+id/msg_waittodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无"
                android:textSize="20dp"
                android:textColor="@color/white"/>

        </TableRow>

        <LinearLayout
            android:id="@+id/ll_userll"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow
                android:id="@+id/tr_getfoodmessage"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_corner_white"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/help"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫码获取食物信息"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="30"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/letsgoto"
                    />
            </TableRow>
        </LinearLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
</ScrollView>
